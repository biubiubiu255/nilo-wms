<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nilo.wms.dao.platform.NotifyDao">

    <!-- 实体bean与数据字段对应关系 -->
    <resultMap id="notify" type="com.nilo.wms.dto.platform.Notify">
        <result property="id" column="id" javaType="java.lang.Long"
                jdbcType="INTEGER"/>

        <result property="notifyId" column="notify_id" javaType="java.lang.String"
                 jdbcType="VARCHAR"/>
        <result property="url" column="url" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="param" column="param" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="result" column="result" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
        <result property="status" column="status" javaType="java.lang.Integer"
                jdbcType="INTEGER"/>
        <result property="num" column="num" javaType="java.lang.Integer"
                jdbcType="INTEGER"/>
        <result property="createdTime" column="created_time" javaType="java.lang.Long"
                jdbcType="INTEGER"/>
        <result property="updatedTime" column="updated_time" javaType="java.lang.Long"
                jdbcType="INTEGER"/>
        <result property="version" column="version" javaType="java.lang.String"
                jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id ,notify_id,url,param,result,num,status,created_time , updated_time ,version
    </sql>

    <!-- 插入语句 -->
    <insert id="insert" parameterType="com.nilo.wms.dto.platform.Notify" statementType="PREPARED"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO t_sys_notify
        ( notify_id,url,param,result,num,status,created_time , updated_time ,version)
        VALUES
        (#{notifyId},#{url},#{param},#{result},#{num},#{status} ,UNIX_TIMESTAMP(NOW()),UNIX_TIMESTAMP(NOW()),UUID())
    </insert>
    <!-- 动态更新语句 -->
    <update id="update" parameterType="com.nilo.wms.dto.platform.Notify" statementType="PREPARED">
        update t_sys_notify
        <trim prefix="set" suffixOverrides="," suffix="where notify_id=#{notifyId}">
            <if test="status != null">
                status = #{status},
            </if>
            <if test="result != null and result != ''">
                result = #{result},
            </if>
            <if test="num != null and num != ''">
                num = #{num},
            </if>
            updated_time=UNIX_TIMESTAMP(NOW()),version=UUID()
        </trim>
    </update>

    <select id="queryBy" resultMap="notify" statementType="PREPARED">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_sys_notify where 1 = 1
        <if test="notifyId != null">
            and notify_id = #{notifyId},
        </if>
        <if test="url != null">
            and url = #{url},
        </if>
        <if test="param != null">
            and param = #{param},
        </if>
        <if test="result != null">
            and result = #{result},
        </if>
        <![CDATA[ and  created_time >= #{start_date} and created_time <= #{end_date} ]]>
        order by created_time desc
        limit #{offset},#{limit}
    </select>

    <select id="queryCountBy" resultType="java.lang.Long" statementType="PREPARED">
        SELECT count(1)
        FROM t_sys_notify where 1 = 1
        <if test="notifyId != null">
            and notify_id = #{notifyId},
        </if>
        <if test="url != null">
            and url = #{url},
        </if>
        <if test="param != null">
            and param = #{param},
        </if>
        <if test="result != null">
            and result = #{result},
        </if>
        <![CDATA[ and  created_time >= #{start_date} and created_time <= #{end_date} ]]>
    </select>

    <select id="queryFailed" resultMap="notify" statementType="PREPARED">
        SELECT <include refid="Base_Column_List"/> FROM t_sys_notify WHERE  FROM_UNIXTIME(created_time,'%Y%m%d') = date_format(now(),'%Y%m%d') and status = 0
    </select>

    <select id="queryByNotifyId" resultMap="notify" statementType="PREPARED">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_sys_notify where notify_id=#{notifyId}
    </select>
</mapper>